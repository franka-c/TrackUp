<div class="max-w-3xl mx-auto text-center">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Log In</h1>

  <% if flash.alert %>
    <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-4">
      <p><%= flash.alert %></p>
    </div>
  <% end %>

  <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 text-left" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                          class: "w-full mt-1 px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 text-left" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
                             class: "w-full mt-1 px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="text-left">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>

      <div class="text-center">
        <%= f.submit "Log In", class: "w-full bg-green-700 hover:bg-green-800 text-white font-semibold py-3 rounded-lg transition duration-300 shadow-lg mt-2" %>
      </div>

    <% end %>

    <div class="mt-6 text-center text-sm">
      <% if devise_mapping.recoverable? %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-green-600 hover:underline" %>
      <% end %>
    </div>
  </div>
</div>
